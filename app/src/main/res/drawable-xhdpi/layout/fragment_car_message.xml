<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.seatrend.cd.vehiclesaleservice.fragment.CarMessageFragment">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/text_super_18sp"
        android:textStyle="bold"
        android:layout_marginStart="24dp"
        android:text="请完善车辆信息:"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:layout_marginStart="24dp">
        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_large_16sp"
            android:textColor="@color/textcolor3"
            android:text="车辆识别代号"/>
        <TextView
            android:id="@+id/tv_clsbdh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_large_16sp"
            android:textColor="@color/textcolor3"
            android:layout_marginStart="12dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:layout_marginStart="24dp">
        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_large_16sp"
            android:textColor="@color/textcolor3"
            android:text="合格证编号"/>
        <TextView
            android:id="@+id/tv_hgzbh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_large_16sp"
            android:textColor="@color/textcolor3"
            android:layout_marginStart="12dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp">
        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_large_16sp"
            android:textColor="@color/textcolor3"
            android:text="使用性质"/>
        <Spinner
            android:id="@+id/sp_syxz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dialog"
            android:layout_marginStart="12dp"
            android:background="@drawable/spinner_white_bg"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_large_16sp"
            android:layout_marginStart="24dp"
            android:text="车身颜色:"/>
        <Spinner
            android:id="@+id/sp_csys_a"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="28dp"
            android:spinnerMode="dialog"
            android:background="@drawable/edit_text_bg"
            android:layout_marginStart="12dp"/>
        <Spinner
            android:id="@+id/sp_csys_b"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:spinnerMode="dialog"
            android:layout_marginStart="4dp"
            android:background="@drawable/edit_text_bg"
            android:layout_height="28dp"/>
        <Spinner
            android:id="@+id/sp_csys_c"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="28dp"
            android:spinnerMode="dialog"
            android:layout_marginStart="4dp"
            android:background="@drawable/edit_text_bg"
            android:layout_marginEnd="32dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:visibility="gone"
        android:gravity="center_vertical"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp">
        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_large_16sp"
            android:textColor="@color/textcolor3"
            android:text="车身颜色"/>
        <TextView
            android:id="@+id/tv_csys"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textcolor3"
            android:textSize="@dimen/text_large_16sp"

            android:layout_marginStart="12dp"
            android:text="@string/djxz"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp">
        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_large_16sp"
            android:textColor="@color/textcolor3"
            android:text="国产进口"/>
        <Spinner
            android:id="@+id/sp_gcjk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dialog"
            android:layout_marginStart="12dp"
            android:background="@drawable/spinner_white_bg"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp">
        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_large_16sp"
            android:textColor="@color/textcolor3"
            android:text="销售日期"/>
        <TextView
            android:id="@+id/tv_xsrq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:textSize="@dimen/text_large_16sp"
            android:textColor="@color/textcolor3"
            android:text="@string/djxz"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp">
        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_large_16sp"
            android:textColor="@color/textcolor3"
            android:text="保险终止日期"/>
        <TextView
            android:id="@+id/tv_bxzzrq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:textSize="@dimen/text_large_16sp"
            android:textColor="@color/textcolor3"
            android:text="@string/djxz"/>
    </LinearLayout>

    <android.support.v4.widget.Space
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:text="@string/next"
        android:textColor="@color/white"
        android:textSize="@dimen/text_super_20sp"
        android:background="@drawable/btn_orange_bg1"/>

</LinearLayout>
