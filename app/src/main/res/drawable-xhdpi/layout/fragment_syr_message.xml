<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.seatrend.cd.vehiclesaleservice.fragment.SyrMessageFragment"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/text_super_18sp"
        android:textStyle="bold"
        android:layout_marginStart="24dp"
        android:text="请完善所有人信息:"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:overScrollMode="never"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/theme_bg"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="24dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_large_16sp"
                    android:textColor="@color/textcolor3"
                    android:text="所有权"/>
                <RadioGroup
                    android:id="@+id/rg_syq"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="32dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/rb_gr"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:button="@drawable/check_box_bg"
                        android:paddingStart="10dp"
                        android:text="个人"/>
                    <RadioButton
                        android:id="@+id/rb_gs"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:button="@drawable/check_box_bg"
                        android:paddingStart="10dp"
                        android:text="公司"/>
                </RadioGroup>
            </LinearLayout>
            <!--公司信息-->
            <LinearLayout
                android:id="@+id/ll_yyzz"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:visibility="gone"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_large_16sp"
                    android:textColor="@color/textcolor3"
                    android:text="营业执照"/>
                <TextView
                    android:id="@+id/tv_yyzz"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_large_16sp"
                    android:textColor="@color/textcolor3"/>
                <ImageView
                    android:id="@+id/iv_yyzz_read"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/scan_bule_icon"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_gs_xm"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:visibility="gone"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_large_16sp"
                    android:textColor="@color/textcolor3"
                    android:text="名称/姓名"/>
                <TextView
                    android:id="@+id/tv_gs_xm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_large_16sp"
                    android:textColor="@color/textcolor3"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_qydz"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:visibility="gone"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_large_16sp"
                    android:textColor="@color/textcolor3"
                    android:text="企业地址"/>
                <EditText
                    android:id="@+id/tv_qydz"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:background="@color/transparent"
                    style="@style/editTextStyle"
                    android:textColor="@color/textcolor3"
                    android:hint="请输入企业的地址"
                    android:paddingStart="4dp"
                    android:textSize="@dimen/text_normal_14sp"/>
            </LinearLayout>
            <!--2222-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_large_16sp"
                    android:textColor="@color/textcolor3"
                    android:text="身份证号"/>
                <TextView
                    android:id="@+id/tv_sfzhm"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_large_16sp"
                    android:textColor="@color/textcolor3"/>
                <ImageView
                    android:id="@+id/iv_sfzh_read"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/scan_bule_icon"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_large_16sp"
                    android:textColor="@color/textcolor3"
                    android:text="名称/姓名"/>
                <TextView
                    android:id="@+id/tv_xm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_large_16sp"
                    android:textColor="@color/textcolor3"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_large_16sp"
                    android:textColor="@color/textcolor3"
                    android:text="住址行政区"/>
                <Spinner
                    android:id="@+id/sp_zsxzqh"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="38dp"
                    android:spinnerMode="dialog"
                    android:background="@color/transparent"/>
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="12dp"
                    android:src="@drawable/drop_down"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_large_16sp"
                    android:textColor="@color/textcolor3"
                    android:text="住址"/>
                <EditText
                    android:id="@+id/ed_zz"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:background="@color/transparent"
                    style="@style/editTextStyle"
                    android:textColor="@color/textcolor3"
                    android:paddingStart="4dp"
                    android:textSize="@dimen/text_normal_14sp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_large_16sp"
                    android:textColor="@color/textcolor3"
                    android:text="人脸识别"/>
                <TextView
                    android:id="@+id/tv_rlsb"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_large_16sp"
                    android:textColor="@color/orange"
                    android:text="未通过"/>
                <ImageView
                    android:id="@+id/iv_rlsb_read"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/scan_bule_icon"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_super_18sp"
                android:textColor="@color/theme_color"
                android:layout_marginStart="24dp"
                android:layout_marginTop="12dp"
                android:text="所有人联系方式"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_large_16sp"
                    android:textColor="@color/textcolor3"
                    android:text="所在地区"/>
                <Spinner
                    android:id="@+id/sp_szdq"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="38dp"
                    android:spinnerMode="dialog"
                    android:background="@color/transparent"/>
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="12dp"
                    android:src="@drawable/drop_down"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_large_16sp"
                    android:textColor="@color/textcolor3"
                    android:text="联系地址"/>
                <EditText
                    android:id="@+id/tv_lxdz"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:textSize="@dimen/text_large_16sp"
                    android:textColor="@color/textcolor3"
                    android:background="@color/transparent"
                    android:paddingStart="4dp"
                    android:hint="请输入联系地址"
                    style="@style/editTextStyle"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_large_16sp"
                    android:textColor="@color/textcolor3"
                    android:text="联系电话"/>
                <EditText
                    android:id="@+id/tv_lxdh"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:textSize="@dimen/text_large_16sp"
                    android:textColor="@color/textcolor3"
                    android:background="@color/transparent"
                    android:paddingStart="4dp"
                    android:inputType="number"
                    android:hint="请输入联系电话"
                    style="@style/editTextStyle"/>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_btn"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical">
        <Button
            android:id="@+id/btn_back"
            android:layout_width="160dp"
            android:layout_height="42dp"
            android:background="@drawable/btn_orange_bg1"
            android:textColor="@color/white"
            android:textSize="@dimen/text_super_18sp"
            android:text="@string/back_next"/>
        <Button
            android:id="@+id/btn_next"
            android:layout_width="160dp"
            android:layout_height="42dp"
            android:background="@drawable/btn_orange_bg1"
            android:textColor="@color/white"
            android:layout_marginStart="24dp"
            android:textSize="@dimen/text_super_18sp"
            android:text="@string/next"/>
    </LinearLayout>



</LinearLayout>
