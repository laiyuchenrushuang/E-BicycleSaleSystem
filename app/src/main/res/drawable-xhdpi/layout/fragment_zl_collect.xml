<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_large_16sp"
            android:textColor="@color/textcolor3"
            android:layout_marginStart="24dp"
            android:text="合格证编码:"/>
        <TextView
            android:id="@+id/tv_hgzbm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_large_16sp"
            android:textColor="@color/textcolor3"
            android:layout_marginStart="12dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_large_16sp"
            android:textColor="@color/textcolor3"
            android:layout_marginStart="24dp"
            android:text="车辆识别代号:"/>
        <TextView
            android:id="@+id/tv_clsbdh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_large_16sp"
            android:textColor="@color/textcolor3"
            android:layout_marginStart="12dp"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/white_bg"
        android:layout_marginTop="10dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:src="@drawable/cchgz_icon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_large_16sp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="8dp"
            android:text="出厂合格证"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginTop="36dp"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/iv_cchgz_state"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/warning"/>
            <TextView
                android:id="@+id/tv_cchgz_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_normal_12sp"
                android:textColor="@color/orange"
                android:layout_marginStart="4dp"
                android:text="未扫描"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_cchgz_scan"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginEnd="10dp"
            android:background="@color/white"
            android:text="@string/go_scan"
            android:gravity="center"
            android:textColor="@color/theme_color"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:drawableEnd="@drawable/next"
            android:drawablePadding="-12dp"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/white_bg"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:src="@drawable/yyzz_icon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_large_16sp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="8dp"
            android:text="营业执照"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginTop="36dp"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/iv_yyzz_state"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/warning"/>
            <TextView
                android:id="@+id/tv_yyzz_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_normal_12sp"
                android:textColor="@color/orange"
                android:layout_marginStart="4dp"
                android:text="未扫描"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_yyzz_scan"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginEnd="10dp"
            android:background="@color/white"
            android:text="@string/go_scan"
            android:gravity="center"
            android:textColor="@color/theme_color"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:drawableEnd="@drawable/next"
            android:drawablePadding="-12dp"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/white_bg"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:src="@drawable/sfz_icon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_large_16sp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="8dp"
            android:text="身份证读取"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginTop="36dp"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/iv_sfz_state"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/warning"/>
            <TextView
                android:id="@+id/tv_sfz_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_normal_12sp"
                android:textColor="@color/orange"
                android:layout_marginStart="4dp"
                android:text="@string/uncomplete"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_sfz_read"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginEnd="10dp"
            android:background="@color/white"
            android:text="去读取"
            android:gravity="center"
            android:textColor="@color/theme_color"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:drawableEnd="@drawable/next"
            android:drawablePadding="-12dp"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/white_bg"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:src="@drawable/rlsb_icon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_large_16sp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="8dp"
            android:text="人脸识别"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginTop="36dp"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/iv_rlsb_state"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/warning"/>
            <TextView
                android:id="@+id/tv_rlsb_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_normal_12sp"
                android:textColor="@color/orange"
                android:layout_marginStart="4dp"
                android:text="@string/uncomplete"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_rlsb_compare"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginEnd="10dp"
            android:background="@color/white"
            android:text="去识别"
            android:gravity="center"
            android:textColor="@color/theme_color"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:drawableEnd="@drawable/next"
            android:drawablePadding="-12dp"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_zlpz"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/white_bg"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:src="@drawable/zlpz_icon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_large_16sp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="8dp"
            android:text="资料拍照"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginTop="36dp"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/iv_zlpz_state"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/warning"/>
            <TextView
                android:id="@+id/tv_zlpz_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_normal_12sp"
                android:textColor="@color/orange"
                android:layout_marginStart="4dp"
                android:text="@string/uncomplete"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_zlpz_photograph"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginEnd="10dp"
            android:background="@color/white"
            android:text="去拍照"
            android:gravity="center"
            android:textColor="@color/theme_color"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:drawableEnd="@drawable/next"
            android:drawablePadding="-12dp"/>

    </RelativeLayout>

    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/btn_orange_bg1"
        android:textColor="@color/white"
        android:text="下一步"
        android:textSize="@dimen/text_super_18sp"/>



</LinearLayout>
