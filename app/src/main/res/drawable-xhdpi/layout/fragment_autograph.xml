<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.seatrend.cd.vehiclesaleservice.fragment.AutographFragment"
    android:background="@color/theme_bg"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/text_super_18sp"
        android:textStyle="bold"
        android:layout_marginStart="24dp"
        android:text="请在下方签名:"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/white_style_bg1"
        android:layout_margin="12dp"
        android:layout_weight="1">
        <com.seatrend.cd.vehiclesaleservice.createview.AutographView
            android:id="@+id/auto_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/iv_qm_iamge"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"/>
        <Button
            android:id="@+id/btn_clear"
            android:layout_width="80dp"
            android:layout_height="32dp"
            android:background="@drawable/btn_bule_bg1"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_large_16sp"
            android:layout_alignParentEnd="true"
            android:layout_margin="20dp"
            android:text="重签"/>

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_btn"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical">
        <Button
            android:id="@+id/btn_back"
            android:layout_width="160dp"
            android:layout_height="42dp"
            android:background="@drawable/btn_orange_bg1"
            android:textColor="@color/white"
            android:textSize="@dimen/text_super_18sp"
            android:text="@string/back_next"/>
        <Button
            android:id="@+id/btn_next"
            android:layout_width="160dp"
            android:layout_height="42dp"
            android:background="@drawable/btn_orange_bg1"
            android:textColor="@color/white"
            android:layout_marginStart="24dp"
            android:textSize="@dimen/text_super_18sp"
            android:text="@string/next"/>
    </LinearLayout>
</LinearLayout>
