<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/common_title"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@color/linecolor"
            android:layout_marginStart="48dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="18dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginStart="48dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="18dp">
            <View
                android:id="@+id/view_bg1"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:background="@color/theme_color"/>

            <View
                android:id="@+id/view_bg2"
                android:layout_width="86dp"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:background="@color/theme_color"/>
            <View
                android:id="@+id/view_bg3"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:background="@color/theme_color"/>
            <View
                android:id="@+id/view_bg4"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:background="@color/theme_color"/>

        </LinearLayout>
        <RadioGroup
            android:id="@+id/m_radio_group"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="24dp">
            <RadioButton
                android:id="@+id/rb_clxx"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:checked="true"
                android:textSize="@dimen/text_normal_14sp"
                android:textColor="@color/text_style_4"
                android:drawableTop="@drawable/radiobutton1_bg"
                android:text="车辆信息"/>
            <RadioButton
                android:id="@+id/rb_syrxx"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:textSize="@dimen/text_normal_14sp"
                android:textColor="@color/text_style_4"
                android:drawableTop="@drawable/radiobutton2_bg"
                android:enabled="false"
                android:text="所有人信息"/>
            <RadioButton
                android:id="@+id/rb_zlpz"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:textSize="@dimen/text_normal_14sp"
                android:textColor="@color/text_style_4"
                android:drawableTop="@drawable/radiobutton3_bg"
                android:enabled="false"
                android:text="资料拍照"/>
            <RadioButton
                android:id="@+id/rb_qm"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:textSize="@dimen/text_normal_14sp"
                android:textColor="@color/text_style_4"
                android:drawableTop="@drawable/radiobutton4_bg"
                android:enabled="false"
                android:text="签名"/>
            <RadioButton
                android:id="@+id/rb_wc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:textSize="@dimen/text_normal_14sp"
                android:textColor="@color/text_style_4"
                android:drawableTop="@drawable/radiobutton5_bg"
                android:enabled="false"
                android:text="完成"/>
        </RadioGroup>
    </RelativeLayout>


    <FrameLayout
        android:id="@+id/framelayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>
