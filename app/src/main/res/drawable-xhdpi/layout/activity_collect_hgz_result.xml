<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <include layout="@layout/common_title"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:src="@drawable/hgz_collect_complete"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_large_16sp"
        android:textColor="@color/textcolor3"
        android:layout_marginTop="6dp"
        android:text="恭喜完成合格证采集"/>
    <Button
        android:id="@+id/btn_goon"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:textColor="@color/white"
        android:textSize="@dimen/text_super_18sp"
        android:background="@drawable/btn_orange_bg1"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="32dp"
        android:text="继续采集"/>
    <Button
        android:id="@+id/btn_see"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:textColor="@color/text_style_2"
        android:textSize="@dimen/text_super_18sp"
        android:background="@drawable/btn_orange_bg2"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="32dp"
        android:text="查看"/>

</LinearLayout>
