<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
         <include layout="@layout/common_title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/item_white_bg"
        android:layout_margin="12dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:layout_marginTop="80dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp">
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:textColor="@color/textcolor3"
                android:textSize="@dimen/text_large_16sp"
                android:text="原密码"/>
            <EditText
                android:id="@+id/et_old_pwd"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:layout_marginStart="6dp"
                style="@style/editTextStyle"
                android:inputType="textPassword"
                android:hint="请输入您的旧密码"
                android:textSize="@dimen/text_large_16sp"
                android:digits="@string/number_and_letter"
                android:background="@null"/>
            <ImageView
                android:id="@+id/iv_delete1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/delete_icon"
                android:visibility="invisible"
                android:layout_marginEnd="10dp"/>
            <CheckBox
                android:id="@+id/cb_pwd_type1"
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:button="@drawable/password_type"
                android:visibility="invisible"
                android:layout_marginEnd="10dp" />
        </LinearLayout>
        <View
            android:id="@+id/m_view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/linecolor"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:textColor="@color/textcolor3"
                android:textSize="@dimen/text_large_16sp"
                android:text="新密码"/>
            <EditText
                android:id="@+id/et_new_pwd1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:layout_marginStart="6dp"
                style="@style/editTextStyle"
                android:inputType="textPassword"
                android:hint="请输入您的新密码"
                android:textSize="@dimen/text_large_16sp"
                android:digits="@string/number_and_letter"
                android:background="@null"/>
            <ImageView
                android:id="@+id/iv_delete2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/delete_icon"
                android:visibility="invisible"
                android:layout_marginEnd="10dp"/>
            <CheckBox
                android:id="@+id/cb_pwd_type2"
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:button="@drawable/password_type"
                android:visibility="invisible"
                android:layout_marginEnd="10dp" />
        </LinearLayout>
        <View
            android:id="@+id/m_view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/linecolor"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:textColor="@color/textcolor3"
                android:textSize="@dimen/text_large_16sp"
                android:text="确认密码"/>
            <EditText
                android:id="@+id/et_new_pwd2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:layout_marginStart="6dp"
                style="@style/editTextStyle"
                android:inputType="textPassword"
                android:hint="请再次输入您的新密码"
                android:textSize="@dimen/text_large_16sp"
                android:digits="@string/number_and_letter"
                android:background="@null"/>
            <ImageView
                android:id="@+id/iv_delete3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/delete_icon"
                android:visibility="invisible"
                android:layout_marginEnd="10dp"/>
            <CheckBox
                android:id="@+id/cb_pwd_type3"
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:button="@drawable/password_type"
                android:visibility="invisible"
                android:layout_marginEnd="10dp" />
        </LinearLayout>
        <View
            android:id="@+id/m_view3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/linecolor"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"/>
        <Button
            android:id="@+id/btn_ok"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginStart="48dp"
            android:layout_marginEnd="48dp"
            android:layout_marginTop="48dp"
            android:textSize="@dimen/text_super_18sp"
            android:textColor="@color/white"
            android:background="@drawable/btn_orange_bg1"
            android:text="确认修改"/>

    </LinearLayout>

</LinearLayout>
