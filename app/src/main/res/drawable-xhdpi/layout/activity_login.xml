<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/common_title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_super_20sp"
            android:textColor="@color/theme_color"
            android:layout_marginTop="48dp"
            android:text="机动车销售登记"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/login_top"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="32dp"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/admin_icon"
                android:layout_marginStart="10dp"
                android:layout_gravity="center_vertical"/>
            <EditText
                android:id="@+id/et_admain"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@color/transparent"
                style="@style/editTextStyle"
                android:digits="@string/number_and_letter"
                android:hint="请输入账号"/>
        </LinearLayout>
        <View
            android:id="@+id/line_view_admian"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:background="@color/linecolor"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="32dp"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/password_icon"
                android:layout_marginStart="10dp"
                android:layout_gravity="center_vertical"/>
            <EditText
                android:id="@+id/et_pwd"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:background="@color/transparent"
                style="@style/editTextStyle"
                android:digits="@string/number_and_letter"
                android:inputType="textPassword"
                android:hint="请输入密码"/>
            <ImageView
                android:id="@+id/iv_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/delete_icon"
                android:visibility="invisible"
                android:layout_marginEnd="10dp"/>
            <CheckBox
                android:id="@+id/cb_pwd_type"
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:button="@drawable/password_type"
                android:layout_marginEnd="10dp"/>
        </LinearLayout>
        <View
            android:id="@+id/line_view_pwd"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:background="@color/linecolor"/>

        <Button
            android:id="@+id/btn_login"
            android:layout_width="240dp"
            android:layout_height="42dp"
            android:layout_marginTop="48dp"
            android:background="@drawable/btn_bule_bg1"
            android:textColor="@color/white"
            android:textSize="@dimen/text_super_18sp"
            android:text="登录"/>
        <Button
            android:id="@+id/btn_setting"
            android:layout_width="240dp"
            android:layout_height="42dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/btn_bule_bg1"
            android:textColor="@color/white"
            android:textSize="@dimen/text_super_18sp"
            android:text="@string/setting"/>
    </LinearLayout>

</LinearLayout>
