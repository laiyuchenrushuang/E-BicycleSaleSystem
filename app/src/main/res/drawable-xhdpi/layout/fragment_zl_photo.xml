<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.seatrend.cd.vehiclesaleservice.fragment.ZlPhotoFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:overScrollMode="never"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/text_super_18sp"
                android:textStyle="bold"
                android:layout_marginStart="24dp"
                android:text="请上传以下资料照片:"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp">
                        <ImageView
                            android:id="@+id/iv_hgz"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/take_photo"/>
                        <ImageView
                            android:id="@+id/iv_hgz_delete"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:visibility="gone"
                            android:src="@drawable/delete1"/>
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_large_16sp"
                        android:textColor="@color/red"
                        android:layout_marginTop="6dp"
                        android:text="合格证原件"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="10dp"
                    android:gravity="center_horizontal">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp">
                        <ImageView
                            android:id="@+id/iv_qzbx"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/take_photo"/>
                        <ImageView
                            android:id="@+id/iv_qzbx_delete"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:visibility="gone"
                            android:src="@drawable/delete1"/>
                    </RelativeLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_large_16sp"
                        android:textColor="@color/red"
                        android:layout_marginTop="6dp"
                        android:text="交通事故责任强制保险凭证"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp">
                        <ImageView
                            android:id="@+id/iv_gzs"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/take_photo"/>
                        <ImageView
                            android:id="@+id/iv_gzs_delete"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:visibility="gone"
                            android:src="@drawable/delete1"/>
                    </RelativeLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_large_16sp"
                        android:layout_marginTop="6dp"
                        android:textColor="@color/textcolor3"
                        android:text="完税证明/免税凭证"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp">
                        <ImageView
                            android:id="@+id/iv_gcfp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/take_photo"/>
                        <ImageView
                            android:id="@+id/iv_gcfp_delete"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:visibility="gone"
                            android:src="@drawable/delete1"/>
                    </RelativeLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_large_16sp"
                        android:textColor="@color/red"
                        android:layout_marginTop="6dp"
                        android:text="来历证明"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="10dp"
                    android:gravity="center_horizontal">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp">
                        <ImageView
                            android:id="@+id/iv_sfzzm"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/take_photo"/>
                        <ImageView
                            android:id="@+id/iv_sfzzm_delete"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:visibility="gone"
                            android:src="@drawable/delete1"/>
                    </RelativeLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_large_16sp"
                        android:gravity="center_horizontal"
                        android:textColor="@color/red"
                        android:layout_marginTop="6dp"
                        android:text="身份证正面\n(国徽面)"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp">
                        <ImageView
                            android:id="@+id/iv_sfzfm"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/take_photo"/>
                        <ImageView
                            android:id="@+id/iv_sfzfm_delete"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:visibility="gone"
                            android:src="@drawable/delete1"/>
                    </RelativeLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_large_16sp"
                        android:layout_marginTop="6dp"
                        android:gravity="center_horizontal"
                        android:textColor="@color/red"
                        android:text="身份证反面\n(人像面)"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_gz_zp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="12dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp">
                        <ImageView
                            android:id="@+id/iv_yyzz"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/take_photo"/>
                        <ImageView
                            android:id="@+id/iv_yyzz_delete"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:visibility="gone"
                            android:src="@drawable/delete1"/>
                    </RelativeLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_large_16sp"
                        android:textColor="@color/red"
                        android:layout_marginTop="6dp"
                        android:text="营业执照"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="10dp"
                    android:gravity="center_horizontal">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp">
                        <ImageView
                            android:id="@+id/iv_sqwts"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/take_photo"/>
                        <ImageView
                            android:id="@+id/iv_sqwts_delete"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:visibility="gone"
                            android:src="@drawable/delete1"/>
                    </RelativeLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_large_16sp"
                        android:gravity="center_horizontal"
                        android:textColor="@color/red"
                        android:layout_marginTop="6dp"
                        android:text="授权委托书"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:orientation="vertical"
                    android:visibility="invisible"
                    android:gravity="center_horizontal">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:src="@drawable/take_photo"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_large_16sp"
                        android:layout_marginTop="6dp"
                        android:gravity="center_horizontal"
                        android:textColor="@color/textcolor3"
                        android:text=""/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_btn"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical">
        <Button
            android:id="@+id/btn_back"
            android:layout_width="160dp"
            android:layout_height="42dp"
            android:background="@drawable/btn_orange_bg1"
            android:textColor="@color/white"
            android:textSize="@dimen/text_super_18sp"
            android:text="@string/back_next"/>
        <Button
            android:id="@+id/btn_next"
            android:layout_width="160dp"
            android:layout_height="42dp"
            android:background="@drawable/btn_orange_bg1"
            android:textColor="@color/white"
            android:layout_marginStart="24dp"
            android:textSize="@dimen/text_super_18sp"
            android:text="@string/next"/>
    </LinearLayout>
</LinearLayout>
