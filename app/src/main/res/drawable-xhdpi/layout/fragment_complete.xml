<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.seatrend.cd.vehiclesaleservice.fragment.CompleteFragment"
    android:background="@color/theme_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="12dp"
        android:background="@drawable/white_style_bg1"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_super_18sp"
                android:layout_marginTop="24dp"
                android:textColor="@color/textcolor3"
                android:text="恭喜完成车辆预登记"/>
            <ImageView
                android:id="@+id/iv_qr_code"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="12dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_large_16sp"
                android:layout_marginTop="20dp"
                android:textColor="@color/textcolor3"
                android:text="扫码下载车辆注册登记申请表"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="48dp"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/pdf_icon"/>
            <TextView
                android:id="@+id/tv_pdf_name"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textColor="@color/textcolor3"
                android:layout_marginStart="6dp"
                android:textSize="@dimen/text_normal_14sp"/>
            <Button
                android:id="@+id/btn_download"
                android:layout_width="80dp"
                android:layout_height="42dp"
                android:background="@drawable/btn_orange_bg1"
                android:textSize="@dimen/text_super_18sp"
                android:textColor="@color/white"
                android:layout_marginStart="24dp"
                android:text="下载"/>
        </LinearLayout>

    </LinearLayout>
    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:textSize="@dimen/text_super_18sp"
        android:background="@drawable/btn_orange_bg1"
        android:text="保存照片到相册"
        android:textColor="@color/white"/>

</LinearLayout>
