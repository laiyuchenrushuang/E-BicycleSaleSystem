<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlActivated">@color/theme_color</item>
    </style>

    <style name="editTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:textCursorDrawable">@drawable/edittext_cursor_style</item>
        <item name="android:singleLine">true</item>
        <item name="android:imeOptions">actionDone</item>
    </style>

    <style name="tabLayoutTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/text_normal_14sp</item>
    </style>

    <style name="system_login">
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="system_login_next">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="car_message_rb">
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="car_message_clcy">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="car_cy">
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="car_cy_bt">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">13sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="car_cy_bt_ok">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">13sp</item>
        <item name="android:paddingLeft">11dp</item>
    </style>

    <style name="car_cy_bt_no">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">13sp</item>
        <item name="android:paddingEnd">3dp</item>
        <item name="android:layout_gravity">right</item>
    </style>

    <style name="remind">
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="system_remind_next">
        <item name="android:textColor">#2a88ff</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="carbasedata_item">
        <item name="android:textColor">#aeaeae</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="carbasedata_item_show">
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="carbasedata_item_hightshow">
        <item name="android:textColor">#2a88ff</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="spinnerItemStyle">
        <item name="android:textColor">@color/theme_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">right|center_vertical</item>
    </style>

    <style name="car_cy_r">
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="car_change_dj_left">
        <item name="android:textColor">#999999</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="carcy_info_jscs_left">
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="carcy_info_jscs_right">
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">right</item>
    </style>
    <style name="login_loading">
        <item name="android:textColor">@color/theme_color</item>
        <item name="android:textSize">25sp</item>
        <item name="android:gravity">center</item>
    </style>


    <color name="blue">#2a88ff</color>
</resources>
