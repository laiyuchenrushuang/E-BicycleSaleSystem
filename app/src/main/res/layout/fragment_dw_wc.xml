    <Button
        android:id="@+id/btn_save_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/text_super_18sp"
        android:background="@drawable/btn_orange_bg1"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="12dp"
        android:text="保存图片到手机相册"/>
    <Button
        android:id="@+id/btn_sacn_qr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/text_super_18sp"
        android:background="@drawable/btn_orange_bg1"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="12dp"
        android:text="扫描二维码获取行驶证电子凭证"/>
    <Button
        android:id="@+id/btn_back_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text_style_2"
        android:textSize="@dimen/text_super_18sp"
        android:background="@drawable/btn_orange_bg2"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="12dp"
        android:text="返回首页"/>

</LinearLayout>
