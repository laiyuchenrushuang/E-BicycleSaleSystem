<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.seatrend.cd.electricbicyclesalesystem.fragment.GrSyrxxFragment"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:overScrollMode="never"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="4dp"
                app:cardCornerRadius="4dp"
                android:layout_margin="12dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp">

                    <LinearLayout
                        android:layout_width="120dp"
                        android:layout_height="140dp"
                        android:layout_marginStart="10dp"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="100dp">
                            <com.seatrend.cd.electricbicyclesalesystem.createview.RoundImageView
                                android:id="@+id/iv_sfzzm"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/take_photo"/>
                            <ImageView
                                android:id="@+id/iv_sfzzm_delete"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:visibility="gone"
                                android:src="@drawable/delete1"/>
                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_normal_12sp"
                            android:textColor="@color/red"
                            android:layout_marginTop="6dp"
                            android:text="身份证正面(国徽面)"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="120dp"
                        android:layout_height="140dp"
                        android:layout_marginStart="10dp"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="100dp">
                            <com.seatrend.cd.electricbicyclesalesystem.createview.RoundImageView
                                android:id="@+id/iv_sfzfm"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/take_photo"/>
                            <ImageView
                                android:id="@+id/iv_sfzfm_delete"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:visibility="gone"
                                android:src="@drawable/delete1"/>
                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_normal_12sp"
                            android:textColor="@color/red"
                            android:layout_marginTop="6dp"
                            android:text="身份证反面(人像面)"/>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textcolor2"
                    android:textSize="@dimen/text_normal_14sp"
                    android:layout_marginStart="12dp"
                    android:text="身份证号"/>

                <android.support.v4.widget.Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tv_sfzh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textcolor2"
                    android:textSize="@dimen/text_normal_14sp"
                    android:layout_marginEnd="12dp"/>
                <ImageView
                    android:id="@+id/iv_sfzh_scan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/scan_bule_icon"
                    android:padding="10dp"
                    android:layout_marginEnd="12dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textcolor2"
                    android:textSize="@dimen/text_normal_14sp"
                    android:layout_marginStart="12dp"
                    android:text="姓名(购车人)"/>

                <android.support.v4.widget.Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tv_xm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textcolor2"
                    android:textSize="@dimen/text_normal_14sp"
                    android:layout_marginEnd="12dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textcolor2"
                    android:textSize="@dimen/text_normal_14sp"
                    android:layout_marginStart="12dp"
                    android:text="人脸识别"/>

                <android.support.v4.widget.Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tv_rlsbjg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red"
                    android:textSize="@dimen/text_normal_14sp"
                    android:text="@string/unpass"
                    android:layout_marginEnd="12dp"/>
                <ImageView
                    android:id="@+id/iv_rlsb_scan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/scan_bule_icon"
                    android:padding="10dp"
                    android:layout_marginEnd="12dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textcolor2"
                    android:textSize="@dimen/text_normal_14sp"
                    android:layout_marginStart="12dp"
                    android:text="住址"/>

                <android.support.v4.widget.Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>
                <EditText
                    android:id="@+id/et_zz"
                    android:layout_width="200dp"
                    android:layout_height="38dp"
                    android:layout_marginEnd="12dp"
                    android:textSize="@dimen/text_normal_14sp"
                    style="@style/editTextStyle"
                    android:paddingStart="4dp"
                    android:background="@drawable/edit_text_bg"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textcolor2"
                    android:textSize="@dimen/text_normal_14sp"
                    android:layout_marginStart="12dp"
                    android:text="住所行政区划"/>

                <android.support.v4.widget.Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>
                <Spinner
                    android:id="@+id/sp_zsxzqh"
                    android:layout_width="200dp"
                    android:layout_height="38dp"
                    android:spinnerMode="dialog"
                    android:layout_marginEnd="12dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textcolor2"
                    android:textSize="@dimen/text_normal_14sp"
                    android:layout_marginStart="12dp"
                    android:text="居住证号码"/>

                <android.support.v4.widget.Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>
                <EditText
                    android:id="@+id/et_jzzhm"
                    android:layout_width="200dp"
                    android:layout_height="38dp"
                    android:textColor="@color/textcolor2"
                    android:textSize="@dimen/text_normal_14sp"
                    style="@style/editTextStyle"
                    android:background="@drawable/edit_text_bg"
                    android:inputType="number"
                    android:paddingStart="4dp"
                    android:hint="请输入居住证号码"
                    android:textColorHint="@color/theme_color"
                    android:layout_marginEnd="12dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textcolor2"
                    android:textSize="@dimen/text_normal_14sp"
                    android:layout_marginStart="12dp"
                    android:text="联系地址"/>

                <android.support.v4.widget.Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>
                <EditText
                    android:id="@+id/et_lxdz"
                    android:layout_width="200dp"
                    android:layout_height="38dp"
                    android:textColor="@color/textcolor2"
                    android:textSize="@dimen/text_normal_14sp"
                    style="@style/editTextStyle"
                    android:background="@drawable/edit_text_bg"
                    android:paddingStart="4dp"
                    android:hint="请输入联系地址"
                    android:textColorHint="@color/theme_color"
                    android:layout_marginEnd="12dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textcolor2"
                    android:textSize="@dimen/text_normal_14sp"
                    android:layout_marginStart="12dp"
                    android:text="联系住所行政区划"/>

                <android.support.v4.widget.Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>
                <Spinner
                    android:id="@+id/sp_lxzsxzqh"
                    android:layout_width="200dp"
                    android:layout_height="38dp"
                    android:spinnerMode="dialog"
                    android:layout_marginEnd="12dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textcolor2"
                    android:textSize="@dimen/text_normal_14sp"
                    android:layout_marginStart="12dp"
                    android:text="联系电话"/>

                <android.support.v4.widget.Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>
                <EditText
                    android:id="@+id/et_lxdh"
                    android:layout_width="200dp"
                    android:layout_height="38dp"
                    android:textColor="@color/textcolor2"
                    android:textSize="@dimen/text_normal_14sp"
                    style="@style/editTextStyle"
                    android:background="@drawable/edit_text_bg"
                    android:paddingStart="4dp"
                    android:hint="请输入联系电话"
                    android:inputType="number"
                    android:textColorHint="@color/theme_color"
                    android:layout_marginEnd="12dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>





    <LinearLayout
        android:id="@+id/ll_btn"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical">
        <Button
            android:id="@+id/btn_back"
            android:layout_width="160dp"
            android:layout_height="42dp"
            android:background="@drawable/btn_orange_bg2"
            android:textColor="@color/text_style_2"
            android:textSize="@dimen/text_super_18sp"
            android:text="@string/back_next"/>
        <Button
            android:id="@+id/btn_next"
            android:layout_width="160dp"
            android:layout_height="42dp"
            android:background="@drawable/btn_orange_bg1"
            android:textColor="@color/white"
            android:layout_marginStart="24dp"
            android:textSize="@dimen/text_super_18sp"
            android:text="@string/next"/>
    </LinearLayout>

</LinearLayout>
