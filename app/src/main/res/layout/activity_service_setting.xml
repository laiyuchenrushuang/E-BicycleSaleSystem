<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.seatrend.cd.electricbicyclesalesystem.activity.ServiceSettingActivity"
    android:orientation="vertical">
    <include layout="@layout/common_title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="80dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_super_20sp"
            android:layout_marginStart="24dp"
            android:inputType="number"
            android:text="IP地址:"/>
        <EditText
            android:id="@+id/et_ip"
            android:layout_width="200dp"
            android:layout_height="42dp"
            android:background="@drawable/edit_text_orange_bg"
            android:layout_marginStart="12dp"
            android:paddingStart="4dp"
            android:digits="@string/number_and_letter"
            style="@style/editTextStyle"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="12dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_super_20sp"
            android:layout_marginStart="24dp"
            android:text="端口号:"/>
        <EditText
            android:id="@+id/et_port"
            android:layout_width="200dp"
            android:layout_height="42dp"
            android:background="@drawable/edit_text_orange_bg"
            android:layout_marginStart="12dp"
            android:paddingStart="4dp"
            android:inputType="number"
            android:digits="0123456789"
            style="@style/editTextStyle"/>
    </LinearLayout>
    <Button
        android:id="@+id/btn_ok"
        android:layout_width="240dp"
        android:layout_height="42dp"
        android:layout_marginTop="24dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btn_bule_bg1"
        android:textSize="@dimen/text_large_16sp"
        android:textColor="@color/white"
        android:text="确定"/>

</LinearLayout>
