<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.seatrend.cd.electricbicyclesalesystem.activity.VincollectActivity"
    android:orientation="vertical">
    <include layout="@layout/common_title"/>

    <ImageView
        android:id="@+id/iv_vin"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/btn_collect_vin"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/btn_orange_bg1"
        android:textColor="@color/white"
        android:textSize="@dimen/text_large_16sp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="20dp"
        android:text="采集vin"/>
    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/btn_bule_bg1"
        android:textColor="@color/white"
        android:textSize="@dimen/text_large_16sp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="20dp"
        android:enabled="false"
        android:text="保存"/>
</LinearLayout>
