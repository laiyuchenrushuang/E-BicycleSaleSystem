<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.seatrend.cd.electricbicyclesalesystem.fragment.DwXxsjFragment"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:overScrollMode="never"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp">
                        <com.seatrend.cd.electricbicyclesalesystem.createview.RoundImageView
                            android:id="@+id/iv_mpz"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/take_photo"/>
                        <ImageView
                            android:id="@+id/iv_mpz_delete"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:visibility="gone"
                            android:src="@drawable/delete1"/>
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_large_16sp"
                        android:textColor="@color/red"
                        android:layout_marginTop="6dp"
                        android:text="铭牌照"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="10dp"
                    android:gravity="center_horizontal">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp">
                        <com.seatrend.cd.electricbicyclesalesystem.createview.RoundImageView
                            android:id="@+id/iv_clbzz"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/take_photo"/>
                        <ImageView
                            android:id="@+id/iv_clbzz_delete"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:visibility="gone"
                            android:src="@drawable/delete1"/>
                    </RelativeLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_large_16sp"
                        android:textColor="@color/red"
                        android:layout_marginTop="6dp"
                        android:text="车辆标准照"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp">
                        <com.seatrend.cd.electricbicyclesalesystem.createview.RoundImageView
                            android:id="@+id/iv_fpyj"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/take_photo"/>
                        <ImageView
                            android:id="@+id/iv_fpyj_delete"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:visibility="gone"
                            android:src="@drawable/delete1"/>
                    </RelativeLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_large_16sp"
                        android:layout_marginTop="6dp"
                        android:textColor="@color/red"
                        android:text="发票原件"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp">

                        <com.seatrend.cd.electricbicyclesalesystem.createview.RoundImageView
                            android:id="@+id/iv_hgzyj"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/take_photo" />

                        <ImageView
                            android:id="@+id/iv_hgzyj_delete"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/delete1"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="合格证原件"
                        android:textColor="@color/red"
                        android:textSize="@dimen/text_large_16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:visibility="invisible"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/delete1"
                            android:visibility="gone" />
                    </RelativeLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="铭牌照"
                        android:textColor="@color/red"
                        android:textSize="@dimen/text_large_16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:visibility="invisible">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/take_photo" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/delete1"
                            android:visibility="gone" />
                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textcolor2"
                    android:layout_marginStart="12dp"
                    android:textSize="@dimen/text_normal_14sp"
                    android:text="获取日期"/>
                <android.support.v4.widget.Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tv_hqsj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_normal_14sp"
                    android:textColor="@color/textcolor2"
                    android:layout_marginEnd="6dp"
                    android:text="@string/dian_ji_xz"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/date_icon"
                    android:layout_marginEnd="12dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textcolor2"
                    android:layout_marginStart="12dp"
                    android:textSize="@dimen/text_normal_14sp"
                    android:text="获取方式"/>
                <android.support.v4.widget.Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>
                <Spinner
                    android:id="@+id/sp_hqfs"
                    android:layout_width="160dp"
                    android:layout_height="38dp"
                    android:spinnerMode="dialog"
                    android:layout_marginEnd="12dp"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textcolor2"
                    android:layout_marginStart="12dp"
                    android:textSize="@dimen/text_normal_14sp"
                    android:text="车辆用途"/>
                <android.support.v4.widget.Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>
                <Spinner
                    android:id="@+id/sp_syxz"
                    android:layout_width="160dp"
                    android:layout_height="38dp"
                    android:spinnerMode="dialog"
                    android:layout_marginEnd="12dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textcolor2"
                    android:layout_marginStart="12dp"
                    android:textSize="@dimen/text_normal_14sp"
                    android:text="登记日期"/>
                <android.support.v4.widget.Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tv_djrq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_normal_14sp"
                    android:textColor="@color/textcolor2"
                    android:layout_marginEnd="6dp"
                    android:text="@string/dian_ji_xz"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/date_icon"
                    android:layout_marginEnd="12dp"/>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/ll_btn"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical">
        <Button
            android:id="@+id/btn_back"
            android:layout_width="160dp"
            android:layout_height="42dp"
            android:background="@drawable/btn_orange_bg2"
            android:textColor="@color/text_style_2"
            android:textSize="@dimen/text_super_18sp"
            android:text="@string/back_next"/>
        <Button
            android:id="@+id/btn_next"
            android:layout_width="160dp"
            android:layout_height="42dp"
            android:background="@drawable/btn_orange_bg1"
            android:textColor="@color/white"
            android:layout_marginStart="24dp"
            android:textSize="@dimen/text_super_18sp"
            android:text="@string/next"/>
    </LinearLayout>
</LinearLayout>
