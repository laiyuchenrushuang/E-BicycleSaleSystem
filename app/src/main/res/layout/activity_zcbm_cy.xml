<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/common_title" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="18dp"
        android:background="@drawable/system_login_editext">

        <EditText
            android:id="@+id/ed_zcbm"
            android:layout_width="290dp"
            android:layout_height="42dp"
            android:background="@null"
            android:digits="0123456789X"
            android:hint="@string/zcbm_cy_hint" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_zcbm_cy_next"
        android:layout_width="290dp"
        android:layout_height="42dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/system_login_next"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/system_login_next"
            android:layout_centerInParent="true"
            android:text="@string/zcbm_cy_next"/>
    </RelativeLayout>
</LinearLayout>