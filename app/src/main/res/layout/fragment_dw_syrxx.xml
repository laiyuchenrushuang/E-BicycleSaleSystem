<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.seatrend.cd.electricbicyclesalesystem.fragment.DwSyrxxFragment"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:cardCornerRadius="4dp"
        android:layout_margin="12dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="140dp"
                android:layout_marginStart="10dp"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp">
                    <com.seatrend.cd.electricbicyclesalesystem.createview.RoundImageView
                        android:id="@+id/iv_yyzz"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/take_photo"/>
                    <ImageView
                        android:id="@+id/iv_yyzz_delete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:visibility="gone"
                        android:src="@drawable/delete1"/>
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_large_16sp"
                    android:textColor="@color/red"
                    android:layout_marginTop="6dp"
                    android:text="营业执照(原件)"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textcolor2"
            android:textSize="@dimen/text_normal_14sp"
            android:layout_marginStart="12dp"
            android:text="营业执照"/>

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        <EditText
            android:id="@+id/tv_yyzz"
            android:layout_width="200dp"
            android:layout_height="38dp"
            android:textColor="@color/textcolor2"
            android:textSize="@dimen/text_normal_14sp"
            android:digits="@string/number_and_letter"
            android:background="@color/transparent"
            android:layout_marginEnd="12dp"/>
        <ImageView
            android:id="@+id/iv_yyzz_scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/scan_bule_icon"
            android:padding="10dp"
            android:layout_marginEnd="12dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="公司名称"
            android:textColor="@color/textcolor2"
            android:textSize="@dimen/text_normal_14sp" />

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <EditText
            android:id="@+id/tv_gsmc"
            android:layout_width="200dp"
            android:layout_height="38dp"
            android:textColor="@color/textcolor2"
            android:textSize="@dimen/text_normal_14sp"
            android:background="@color/transparent"
            style="@style/editTextStyle"
            android:layout_marginEnd="12dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textcolor2"
            android:textSize="@dimen/text_normal_14sp"
            android:layout_marginStart="12dp"
            android:text="公司地址行政区划"/>

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        <Spinner
            android:id="@+id/sp_gsxzqh"
            android:layout_width="200dp"
            android:layout_height="38dp"
            android:spinnerMode="dialog"
            android:layout_marginEnd="12dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textcolor2"
            android:textSize="@dimen/text_normal_14sp"
            android:layout_marginStart="12dp"
            android:text="联系地址"/>

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        <EditText
            android:id="@+id/et_lxdz"
            android:layout_width="200dp"
            android:layout_height="38dp"
            android:textColor="@color/textcolor2"
            android:textSize="@dimen/text_normal_14sp"
            style="@style/editTextStyle"
            android:background="@drawable/edit_text_bg"
            android:paddingStart="4dp"
            android:layout_marginEnd="12dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textcolor2"
            android:textSize="@dimen/text_normal_14sp"
            android:layout_marginStart="12dp"
            android:text="联系地址行政区划"/>

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        <Spinner
            android:id="@+id/sp_dzxzqh"
            android:layout_width="200dp"
            android:layout_height="38dp"
            android:spinnerMode="dialog"
            android:layout_marginEnd="12dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textcolor2"
            android:textSize="@dimen/text_normal_14sp"
            android:layout_marginStart="12dp"
            android:text="联系电话"/>

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        <EditText
            android:id="@+id/et_lxdh"
            android:layout_width="200dp"
            android:layout_height="38dp"
            android:textColor="@color/textcolor2"
            android:textSize="@dimen/text_normal_14sp"
            style="@style/editTextStyle"
            android:background="@drawable/edit_text_bg"
            android:inputType="number"
            android:paddingStart="4dp"
            android:layout_marginEnd="12dp"/>
    </LinearLayout>
    <android.support.v4.widget.Space
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>


    <LinearLayout
        android:id="@+id/ll_btn"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical">
        <Button
            android:id="@+id/btn_back"
            android:layout_width="160dp"
            android:layout_height="42dp"
            android:background="@drawable/btn_orange_bg2"
            android:textColor="@color/text_style_2"
            android:textSize="@dimen/text_super_18sp"
            android:text="@string/back_next"/>
        <Button
            android:id="@+id/btn_next"
            android:layout_width="160dp"
            android:layout_height="42dp"
            android:background="@drawable/btn_orange_bg1"
            android:textColor="@color/white"
            android:layout_marginStart="24dp"
            android:textSize="@dimen/text_super_18sp"
            android:text="@string/next"/>
    </LinearLayout>

</LinearLayout>
